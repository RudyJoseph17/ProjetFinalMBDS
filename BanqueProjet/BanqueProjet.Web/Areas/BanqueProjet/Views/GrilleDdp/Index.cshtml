@model IEnumerable<BanqueProjet.Application.Dtos.GrilleDdpIdentificationProjetDto>
@{
    ViewData["Title"] = "Liste des Grilles DDP";
}
<h2>Liste des Grilles DDP</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Créer Nouvelle Grille DDP</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id du Projet</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdIdentificationProjet">
                        @item.IdIdentificationProjet
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdIdentificationProjet" class="btn btn-warning btn-sm">Éditer</a>
                    <a asp-action="Delete" asp-route-id="@item.IdIdentificationProjet" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

