@model IEnumerable<BanqueProjet.Application.Dtos.GrilleDdpProjetDto>
@{
    ViewData["Title"] = "Liste des grilles DDP";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer une grille</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Titre projet</th>
            <th>Ministère</th>
            <th>Date soumission</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TitreProjet</td>
                <td>@item.Ministere</td>
                <td>@item.DateSoumission?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdGrilleDdpProjet" class="btn btn-info btn-sm">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>
