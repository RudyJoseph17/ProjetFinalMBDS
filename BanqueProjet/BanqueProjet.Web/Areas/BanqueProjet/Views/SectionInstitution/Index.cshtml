@model IEnumerable<SectionInstitutionViewModel>
@{
    ViewData["Title"] = "Sections d'institution";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Section</th>
            <th>ID Institution</th>
            <th>Nom de la section</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdSectionInstitution</td>
                <td>@item.IdInstitutionSectorielle</td>
                <td>@item.NomSection</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.IdSectionInstitution" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Créer une section</a>

