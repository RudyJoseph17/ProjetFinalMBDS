@model BanqueProjet.Web.Models.DdpViewModel
@{
    ViewData["Title"] = "Étape 3 – Parties prenantes";
    var step = (int)ViewData["Step"];
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Wizard" method="post">
    <input type="hidden" name="step" value="@step" />

    <div id="partiesPrenantes-list">
        <h4>Liste des parties prenantes</h4>
        @for (int i = 1; i < Model.Projets.PartiesPrenantes.Count; i++)
        {
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].NomDirecteurDeProjet" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].NomDirecteurDeProjet" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].TelephoneDirecteurDeProjet" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].TelephoneDirecteurDeProjet" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].CourrielDirecteurDeProjet" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].CourrielDirecteurDeProjet" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].NomFirmeExecution" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].NomFirmeExecution" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].TelephoneFirmeExecution" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].TelephoneFirmeExecution" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].CourrielFirmeExecution" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].CourrielFirmeExecution" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].NomFirmeSupervision" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].NomFirmeSupervision" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].TelephoneFirmeSupervision" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].TelephoneFirmeSupervision" class="text-danger"></span>
            </div>
            <div class="card mb-2 p-2">
                <label class="form-label">Partie prenante @(i + 1)</label>
                <input asp-for="Projets.PartiesPrenantes[@i].CourrielFirmeSupervision" class="form-control" />
                <span asp-validation-for="Projets.PartiesPrenantes[@i].CourrielFirmeSupervision" class="text-danger"></span>
            </div>
        }
    </div>
    <button type="button" id="add-partiesPrenante" class="btn btn-secondary">Ajouter une partie prenante</button>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" name="action" value="Prev" class="btn btn-secondary">Précédent</button>
        <button type="submit" name="action" value="Next" class="btn btn-primary">Suivant</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function handleAdd(btnSelector, listSelector, tmplSelector) {
            $(btnSelector).on('click', function () {
                var count = $(listSelector).children('.partiesPrenante-item').length;
                var html = $(tmplSelector).html().replace(/__index__/g, count);
                $(listSelector).append(html);
            });
        }
        function handleRemove(itemSelector, btnSelector) {
            $(document).on('click', btnSelector, function () {
                $(this).closest(itemSelector).remove();
            });
        }
        $(function () {
            handleAdd('#add-partiesPrenante', '#partiesPrenantes-list', '#partiesPrenante-template');
            handleRemove('.partiesPrenante-item', '.remove-partiesPrenante');
        });
    </script>

    <div id="partiesPrenante-template" class="d-none">
        <div class="partiesPrenante-item mb-3">
            <div class="form-group">
                <input name="Projets.PartiesPrenantes[__index__].IdIdentificationProjet" type="hidden" value="@Model.Projets.IdIdentificationProjet" />
                <div class="form-group"><label>Nom du directeur projet </label><input name="Projets.PartiesPrenantes[__index__].NomDirecteurDeProjet" class="form-control" /></div>
                <div class="form-group"><label>Téléphone du directeur projet </label><input name="Projets.PartiesPrenantes[__index__].TelephoneDirecteurDeProjet" class="form-control" /></div>
                <div class="form-group"><label>Courriel du directeur projet </label><input name="Projets.PartiesPrenantes[__index__].CourrielDirecteurDeProjet" class="form-control" /></div>
                <div class="form-group"><label>Nom de la firme d'exécution </label><input name="Projets.PartiesPrenantes[__index__].NomFirmeExecution" class="form-control" /></div>
                <div class="form-group"><label>Téléphone de la firme d'exécution </label><input name="Projets.PartiesPrenantes[__index__].TelephoneFirmeExecution" class="form-control" /></div>
                <div class="form-group"><label>Courriel de la firme d'exécution </label><input name="Projets.PartiesPrenantes[__index__].CourrielFirmeExecution" class="form-control" /></div>
                <div class="form-group"><label>Nom de la firme de supervision </label><input name="Projets.PartiesPrenantes[__index__].NomFirmeSupervision" class="form-control" /></div>
                <div class="form-group"><label>Téléphone de la firme de supervision </label><input name="Projets.PartiesPrenantes[__index__].TelephoneFirmeSupervision" class="form-control" /></div>
                <div class="form-group"><label>Courriel de la firme de supervision </label><input name="Projets.PartiesPrenantes[__index__].CourrielFirmeSupervision" class="form-control" /></div>
                <div class="col-auto align-self-end"><button type="button" class="btn btn-danger remove-partiesPrenante">Supprimer</button></div>
            </div>
        </div>
    </div>
}

