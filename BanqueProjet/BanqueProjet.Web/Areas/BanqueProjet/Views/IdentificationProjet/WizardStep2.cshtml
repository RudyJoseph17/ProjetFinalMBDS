@model BanqueProjet.Web.Models.DdpViewModel
@{
    ViewData["Title"] = "Étape 2 sur 6 – Informations générales (partie 2)";

    var step = (int)ViewData["Step"];
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Wizard" method="post">
    <input type="hidden" name="step" value="@step" />

    <div class="mb-3">
        <label asp-for="Projets.Programme " class="form-label">Programme</label>
        <input asp-for="Projets.Programme " class="form-control" />
        <span asp-validation-for="Projets.Programme " class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.SousProgramme" class="form-label">Sous-progeamme</label>
        <input asp-for="Projets.SousProgramme" class="form-control" />
        <span asp-validation-for="Projets.SousProgramme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.SecteurDActivites " class="form-label">Secteur d'activité</label>
        <input asp-for="Projets.SecteurDActivites " class="form-control" />
        <span asp-validation-for="Projets.SecteurDActivites " class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.SousSecteurDActivites" class="form-label">Sous-secteur d'activité</label>
        <input asp-for="Projets.SousSecteurDActivites" class="form-control" />
        <span asp-validation-for="Projets.SousSecteurDActivites" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.TypeDeProjet" class="form-label">Type de projet</label>
        <input asp-for="Projets.TypeDeProjet" class="form-control" />
        <span asp-validation-for="Projets.TypeDeProjet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.EchelonTerritorial" class="form-label">Echelon Territorial du projet</label>
        <input asp-for="Projets.EchelonTerritorial" class="form-control" />
        <span asp-validation-for="Projets.EchelonTerritorial" class="text-danger"></span>
    </div>

    <h2>Localisationdu projet</h2>
    <div id="tab-LocalisationGeographique">
        <input asp-for="Projets.IdIdentificationProjet" type="hidden" />
        <input asp-for="LocalisationGeographique.IdIdentificationProjet" type="hidden" />

        <div class="form-group">
            <label asp-for="LocalisationGeographique.Departement">Département</label>
            <input asp-for="LocalisationGeographique.Departement" class="form-control" />
            <span asp-validation-for="LocalisationGeographique.Departement" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LocalisationGeographique.Arrondissement">Arrondissement</label>
            <input asp-for="LocalisationGeographique.Arrondissement" class="form-control" />
            <span asp-validation-for="LocalisationGeographique.Arrondissement" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LocalisationGeographique.Commune">Commune</label>
            <input asp-for="LocalisationGeographique.Commune" class="form-control" />
            <span asp-validation-for="LocalisationGeographique.Commune" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LocalisationGeographique.SectionCommunale">Section communale</label>
            <input asp-for="LocalisationGeographique.SectionCommunale" class="form-control" />
            <span asp-validation-for="LocalisationGeographique.SectionCommunale" class="text-danger"></span>
        </div>

    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" name="action" value="Prev" class="btn btn-secondary">Précédent</button>
        <button type="submit" name="action" value="Next" class="btn btn-primary">Suivant</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
