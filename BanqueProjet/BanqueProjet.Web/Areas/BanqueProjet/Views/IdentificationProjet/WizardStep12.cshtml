@model BanqueProjet.Web.Models.DdpViewModel
@{
    ViewData["Title"] = "Étape N – Prévision";
    var step = (int)ViewData["Step"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Wizard" method="post">
    <input type="hidden" name="step" value="@step" />

    <div class="mb-3">
        <label asp-for="Prevision.IdActivites" class="form-label">Activité liée</label>
        <select asp-for="Prevision.IdActivites" asp-items="ViewBag.ActiviteList" class="form-control">
            <option value="">-- Choisir une activité --</option>
        </select>
        <span asp-validation-for="Prevision.IdActivites" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prevision.ArticlePrevision" class="form-label">Article de la prévision</label>
        <input asp-for="Prevision.ArticlePrevision" class="form-control" />
        <span asp-validation-for="Prevision.ArticlePrevision" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prevision.AlineaPrevision" class="form-label">Alinéa de la prévision</label>
        <input asp-for="Prevision.AlineaPrevision" class="form-control" />
        <span asp-validation-for="Prevision.AlineaPrevision" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prevision.MontantPrevisionSurAlinea" class="form-label">Montant</label>
        <input asp-for="Prevision.MontantPrevisionSurAlinea" class="form-control" />
        <span asp-validation-for="Prevision.MontantPrevisionSurAlinea" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" name="action" value="Prev" class="btn btn-secondary">Précédent</button>
        <button type="submit" name="action" value="Next" class="btn btn-primary">Suivant</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
