// Views/BanqueProjet/IdentificationProjet/Confirmation.cshtml
@model BanqueProjet.Application.Dtos.ProjetsBPDto
@{
    ViewData["Title"] = "Confirmation de création";
}
<div class="container mt-5">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Projet enregistré avec succès !</h4>
        <p>Le projet <strong>@Model.IdIdentificationProjet</strong> a bien été créé.</p>
    </div>
    <div class="mt-4">
        <a asp-action="Details" asp-route-projetId="@Model.IdIdentificationProjet" asp-route-cadreId="0" class="btn btn-primary">
            Voir les détails
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            Retour à la liste des projets
        </a>
    </div>
</div>
