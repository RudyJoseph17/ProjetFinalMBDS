@model BanqueProjet.Web.Models.DdpViewModel
@{
    ViewData["Title"] = "Étape 8 – Indicateurs de résultats";
    var step = (int)ViewData["Step"];
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Wizard" method="post">
    <input type="hidden" name="step" value="@step" />

    <div id="indicateurs-list">
        <h4>Indicateurs de résultats</h4>
        @for (int i = 0; i < Model.Projets.IndicateursDeResultats.Count; i++)
        {
            <div class="indicateur-item mb-3">
                <div class="form-row">
                    <div class="col">
                        <label asp-for="Projets.IndicateursDeResultats[@i].DefinitionIndicateursDeResu"></label>
                        <input asp-for="Projets.IndicateursDeResultats[@i].DefinitionIndicateursDeResu" class="form-control" />
                        <span asp-validation-for="Projets.IndicateursDeResultats[@i].DefinitionIndicateursDeResu" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Projets.IndicateursDeResultats[@i].QuantiteAssocieAIndicateur"></label>
                        <input asp-for="Projets.IndicateursDeResultats[@i].QuantiteAssocieAIndicateur" class="form-control" />
                        <span asp-validation-for="Projets.IndicateursDeResultats[@i].QuantiteAssocieAIndicateur" class="text-danger"></span>
                    </div>
                    <div class="col-auto align-self-end">
                        <button type="button" class="btn btn-danger remove-activite">Supprimer</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <button id="add-indicateur" type="button" class="btn btn-sm btn-outline-primary mt-2">
        + Ajouter un indicateur de resultat
    </button>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" name="action" value="Prev" class="btn btn-secondary">Précédent</button>
        <button type="submit" name="action" value="Next" class="btn btn-primary">Suivant</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function handleAdd(btnSelector, listSelector, tmplSelector) {
            $(btnSelector).on('click', function () {
                var count = $(listSelector).children('.indicateur-item').length;
                var html = $(tmplSelector).html().replace(/__index__/g, count);
                $(listSelector).append(html);
            });
        }
        function handleRemove(itemSelector, btnSelector) {
            $(document).on('click', btnSelector, function () {
                $(this).closest(itemSelector).remove();
            });
        }
        $(function () {
            handleAdd('#add-indicateur', '#indicateurs-list', '#indicateur-template');
            handleRemove('.indicateur-item', '.remove-indicateur');
        });
    </script>

    @* Template caché sans index dans les labels *@
    <div id="indicateur-template" class="d-none">
        <div class="indicateur-item mb-3">
            <div class="form-row">
                <input name="Projets.IndicateursDeResultats[__index__].IdIdentificationProjet" type="hidden" value="@Model.Projets.IdIdentificationProjet" />
                <div class="col"><label>Définition indicateur de résultat</label><input name="Projets.IndicateursDeResultats[__index__].DefinitionIndicateursDeResu" class="form-control" /></div>
                <div class="col"><label>Quantité associée à l'indicateur'</label><input name="Projets.IndicateursDeResultats[__index__].QuantiteAssocieAIndicateur" type="number" class="form-control" /></div>
                <div class="col-auto align-self-end"><button type="button" class="btn btn-danger remove-indicateur">Supprimer</button></div>
            </div>
        </div>
    </div>
}
