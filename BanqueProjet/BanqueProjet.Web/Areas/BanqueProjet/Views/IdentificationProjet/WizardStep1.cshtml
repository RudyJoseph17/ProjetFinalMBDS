@model BanqueProjet.Web.Models.DdpViewModel
@{
    ViewData["Title"] = "Étape 1 sur 6 – Informations générales";
    var step = (int)ViewData["Step"];
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Wizard" method="post">
    <input type="hidden" name="step" value="@step" />

    <div class="mb-3">
        <label asp-for="Projets.NomProjet" class="form-label">Nom du projet</label>
        <input asp-for="Projets.NomProjet" class="form-control" />
        <span asp-validation-for="Projets.NomProjet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.Ministere" class="form-label">Ministère</label>
        <input asp-for="Projets.Ministere" class="form-control" />
        <span asp-validation-for="Projets.Ministere" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.Section" class="form-label">Section</label>
        <input asp-for="Projets.Section" class="form-control" />
        <span asp-validation-for="Projets.Section" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.CodePip" class="form-label">Code PIP</label>
        <input asp-for="Projets.CodePip" class="form-control" />
        <span asp-validation-for="Projets.CodePip" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.CodeBailleur" class="form-label">Code bailleur</label>
        <input asp-for="Projets.CodeBailleur" class="form-control" />
        <span asp-validation-for="Projets.CodeBailleur" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.NomDirecteurDeProjet" class="form-label">Nom du directeur de projet</label>
        <input asp-for="Projets.NomDirecteurDeProjet" class="form-control" />
        <span asp-validation-for="Projets.NomDirecteurDeProjet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.TelephoneDirecteurDeProjet" class="form-label">Téléphone du directeur de projet</label>
        <input asp-for="Projets.TelephoneDirecteurDeProjet" class="form-control" />
        <span asp-validation-for="Projets.TelephoneDirecteurDeProjet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.CourrielDirecteurDeProjet" class="form-label">Adresse mail du directeur de projet</label>
        <input asp-for="Projets.CourrielDirecteurDeProjet" class="form-control" />
        <span asp-validation-for="Projets.CourrielDirecteurDeProjet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.DateInscription" class="form-label">Date d'inscription du projet</label>
        <input asp-for="Projets.DateInscription" type="date" class="form-control" />
        <span asp-validation-for="Projets.DateInscription" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Projets.DateMiseAJour" class="form-label">Date de mise à jour</label>
        <input asp-for="Projets.DateMiseAJour" type="date" class="form-control" />
        <span asp-validation-for="Projets.DateMiseAJour" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" name="action" value="Prev"
                class="btn btn-secondary" disabled>
            Précédent
        </button>
        <button type="submit" name="action" value="Next"
                class="btn btn-primary">
            Suivant
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
