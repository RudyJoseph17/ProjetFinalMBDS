<script asp-src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
<script asp-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>



    <!-- Page level plugins (Chart.js) -->
