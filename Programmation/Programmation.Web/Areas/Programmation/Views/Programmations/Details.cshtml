@model Programmation.Web.Models.ProgrammationViewModel
@{
    ViewData["Title"] = "Détails du projet";
}

<h2>@ViewData["Title"]</h2>

<div class="card mb-3">
    <div class="card-header">Projet</div>
    <div class="card-body">
        <p><strong>Id :</strong> @Model.ProjetsCrees.IdIdentificationProjet</p>
        <p><strong>Nom :</strong> @Model.ProjetsCrees.NomProjet</p>
        <p><strong>Date programmation :</strong> @Model.ProjetsCrees.DateProgrammation.ToString("dd/MM/yyyy")</p>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">Livrables programmés</div>
    <div class="card-body">
        <ul>
            @foreach (var livrable in Model.LivrablesProgramme)
            {
                <li>@livrable.DefinitionLivrablesDuProjet - @livrable.QuantiteALivrer</li>
            }
        </ul>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">Informations financières</div>
    <div class="card-body">
        <ul>
            @foreach (var info in Model.InfosFinancieresProgrammees)
            {
                <li>@info.Alinea : @info.MontantPrevu</li>
            }
        </ul>
    </div>
</div>

<a asp-action="Edit" asp-route-idProjet="@Model.ProjetsCrees.IdIdentificationProjet" class="btn btn-warning">Modifier</a>
<a asp-action="Index" class="btn btn-secondary">Retour</a>
