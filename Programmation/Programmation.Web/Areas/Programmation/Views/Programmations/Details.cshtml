@model Programmation.Application.Dtos.ProgrammationProjetDto

@{
    ViewData["Title"] = "Détails de la programmation";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id projet</dt>
        <dd class="col-sm-10">@Model.IdIdentificationProjet</dd>

        <dt class="col-sm-2">Livrables programmés</dt>
        @if (Model.InformationsFinancieresProgrammeesProjet?.Any() == true)
        {
        <dd class="col-sm-10">
            @foreach (var l in Model.LivrablesProgrammesProjets)
            {
                <div>- @l.QuantiteALivrer</div> <!-- supposer une propriété Libelle -->
            }
        </dd>

        <dt class="col-sm-2">Infos financières</dt>
        <dd class="col-sm-10">
            @foreach (var f in Model.InformationsFinancieresProgrammeesProjet)
            {
                <div>- Exercice @f.ExerciceFiscalDebut–@f.ExerciceFiscalFin : @f.MontantPrevu €</div>
            }
        </dd>
}
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdIdentificationProjet">Modifier</a> |
    <a asp-action="IndexProgrammations">Retour à la liste</a>
</p>

