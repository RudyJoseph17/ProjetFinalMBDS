@model Programmation.Application.Dtos.ProgrammationProjetDto

@{
    ViewData["Title"] = "Créer une programmation";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateProgrammation" method="post">
    <div class="form-group">
        <label asp-for="IdIdentificationProjet"></label>
        <input asp-for="IdIdentificationProjet" class="form-control" readonly />
    </div>

    <!-- TODO: ajouter les champs d’édition pour les listes Livrables et InformationsFinancières -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a asp-action="IndexProgrammations" class="btn btn-secondary">Annuler</a>
    </div>
</form>

