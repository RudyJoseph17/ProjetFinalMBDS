@model Programmation.Application.Dtos.ProgrammationProjetDto

@{
    ViewData["Title"] = "Modifier une programmation";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditProgrammation" method="post">
    <div class="form-group">
        <label asp-for="IdIdentificationProjet"></label>
        <input asp-for="IdIdentificationProjet" class="form-control" readonly />
    </div>

    <!-- TODO: modifier les champs existants (Listes imbriquées) -->

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
        <a asp-action="IndexProgrammations" class="btn btn-secondary">Retour à la liste</a>
    </div>
</form>

