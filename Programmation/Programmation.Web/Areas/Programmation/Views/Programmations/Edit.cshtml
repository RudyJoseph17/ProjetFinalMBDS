@model Programmation.Web.Models.ProgrammationViewModel
@{
    ViewData["Title"] = "Modifier la programmation";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProjetsCrees.IdIdentificationProjet" />

    <div class="mb-3">
        <label asp-for="ProjetsCrees.NomProjet" class="form-label">Nom du projet</label>
        <input asp-for="ProjetsCrees.NomProjet" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ProjetsCrees.DateProgrammation" class="form-label">Date de programmation</label>
        <input asp-for="ProjetsCrees.DateProgrammation" type="date" class="form-control" />
    </div>

    <h4>Livrables programmés</h4>
    <div id="livrablesContainer">
        @for (int i = 0; i < Model.LivrablesProgramme.Count; i++)
        {
            <div class="mb-2">
                <input asp-for="LivrablesProgramme[@i].DefinitionLivrablesDuProjet" class="form-control mb-1" />
                <input asp-for="LivrablesProgramme[@i].QuantiteALivrer" class="form-control" />
            </div>
        }
    </div>

    <h4>Informations financières</h4>
    <div id="infosFinContainer">
        @for (int i = 0; i < Model.InfosFinancieresProgrammees.Count; i++)
        {
            <div class="mb-2 row">
                <div class="col">
                    <input asp-for="InfosFinancieresProgrammees[@i].Alinea" class="form-control" />
                </div>
                <div class="col">
                    <input asp-for="InfosFinancieresProgrammees[@i].MontantPrevu" type="number" class="form-control" />
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">Mettre à jour</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Retour</a>
</form>
