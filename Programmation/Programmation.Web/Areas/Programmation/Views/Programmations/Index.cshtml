@model IEnumerable<BanqueProjet.Application.Dtos.ProjetsBPDto>
@{
    ViewData["Title"] = "Projets avec avis favorable";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Nom du projet</th>
            <th>Avis</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projet in Model)
        {
            <tr>
                <td>@projet.IdIdentificationProjet</td>
                <td>@projet.NomProjet</td>
                <td>@projet.AvisProjet</td>
                <td>
                    <a asp-action="Create" asp-route-idProjet="@projet.IdIdentificationProjet" class="btn btn-primary btn-sm mb-1">Nouvelle programmation</a>
                    <a asp-action="Details" asp-route-idProjet="@projet.IdIdentificationProjet" class="btn btn-info btn-sm mb-1">Détails</a>
                    <a asp-action="Edit" asp-route-idProjet="@projet.IdIdentificationProjet" class="btn btn-warning btn-sm mb-1">Modifier</a>
                    <form asp-action="Delete" asp-route-idProjet="@projet.IdIdentificationProjet" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Confirmer la suppression ?');">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
