@{
    ViewData["Title"] = "Accueil";
}

    <div class="container mt-5">

        @if (!User.Identity.IsAuthenticated)
        {
                <div class="alert alert-warning text-center">
                    Vous n’êtes pas connecté.  
                    <a asp-controller="Account"
                       asp-action="Login"
                       asp-route-returnUrl="@Url.Action("Index","Home")"
                       class="btn btn-primary btn-sm ms-2">
                       Se connecter
                    </a>
                </div>
        }
        else
        {
                <!-- Message de bienvenue -->
            @if (TempData["Message"] is string welcome && !string.IsNullOrWhiteSpace(welcome))
            {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @welcome
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                        </div>
            }

                <!-- Ton dashboard SB-Admin -->
                <h1 class="h3 mb-4 text-gray-800">Tableau de bord</h1>
                <div class="row">
                    <div class="col-lg-3 mb-4">
                        <div class="card bg-primary text-white shadow">
                        </div>
                    </div>
                    <!-- Ajoute ici les autres cartes/widgets de ton dashboard -->
                </div>

            <div class="btn-group" role="group">
                <a asp-area="BanqueProjet" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    Banque de Projets
                </a>
                <a asp-area="Programmation" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    Module de programmation
                </a>
                <a asp-area="SuiviEvaluation" asp-controller="Home" asp-action="Index" class="btn btn-success">
                    Module de suivi-évaluation
                </a>
                <a asp-area="TableauxDeBord" asp-controller="Home" asp-action="Index" class="btn btn-info">
                    Tableaux de bord
                </a>
            </div>
        }

    </div>
    
