@model InvestissementsPublics.Starter.Models.Privileges.PrivilegeIndexVm
@{
    ViewData["Title"] = "Privilèges";
}
<h2>Privilèges</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Créer un privilège</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Rôles liés</th>
            <th>Attributions directes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Privileges)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.RoleCount</td>
                <td>@p.UserDirectCount</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@p.Id">Détails</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.Id">Modifier</a>
                    <a class="btn btn-sm btn-outline-info" asp-action="Rename" asp-route-id="@p.Id">Renommer</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@p.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

