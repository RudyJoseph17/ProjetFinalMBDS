@model InvestissementsPublics.Starter.Models.Privileges.PrivilegeCreateVm
@{
    ViewData["Title"] = "Créer un privilège";
}

<h2>Créer un privilège</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <small class="form-text text-muted">Format recommandé : Module.Entity.Action (ex: BanqueProjet.Projet.Create)</small>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Rôles (cocher ceux qui auront ce privilège)</label>
        <div>
            @if (Model.AvailableRoles != null && Model.AvailableRoles.Any())
            {
                foreach (var r in Model.AvailableRoles)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="SelectedRoleIds" value="@r.Value" id="role_@r.Value" />
                        <label class="form-check-label" for="role_@r.Value">@r.Text</label>
                    </div>
                }
            }
            else
            {
                <p><em>Aucun rôle disponible.</em></p>
            }
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Utilisateurs (rechercher et attribuer)</label>
        <!-- Select2 multiple. name must match model property SelectedUserIds -->
        <select id="users-select" name="SelectedUserIds" multiple="multiple" style="width:100%"></select>
        <small class="form-text text-muted">Tapez un nom ou email, sélectionnez plusieurs utilisateurs si besoin.</small>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Styles {
    <!-- Optionnel : placer dans _Layout si déjà inclus -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/css/select2.min.css" rel="stylesheet" />
}

@section Scripts {
    <!-- jQuery (nécessaire pour Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/js/select2.min.js"></script>

    <script>
        $(function () {
            function formatUser(item) {
                // item.text already set by server (UserName or Email)
                return item.text;
            }

            $('#users-select').select2({
                placeholder: 'Rechercher des utilisateurs (nom ou email)...',
                allowClear: true,
                minimumInputLength: 2,
                multiple: true,
                ajax: {
                    url: '@Url.Action("SearchUsers", "Privileges")',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return {
                            q: params.term,    // search term
                            page: params.page || 1
                        };
                    },
                    processResults: function (data, params) {
                        params.page = params.page || 1;
                        return {
                            results: data.items,
                            pagination: { more: data.more }
                        };
                    },
                    cache: true
                },
                templateResult: formatUser,
                templateSelection: function (item) { return item.text; }
            });

            // Si tu veux pré-charger des utilisateurs existants (Edit), tu peux injecter Model.SelectedUserIds ici et faire un appel AJAX pour récupérer les données et les ajouter au select2.
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}
