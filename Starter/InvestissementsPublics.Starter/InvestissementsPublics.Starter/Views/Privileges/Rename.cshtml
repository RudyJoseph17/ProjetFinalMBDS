@model InvestissementsPublics.Starter.Models.Privileges.PrivilegeCreateVm
@{
    ViewData["Title"] = "Renommer privilège";
}

<h2>Renommer privilège</h2>

<form asp-action="Rename" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nouveau nom</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <small class="form-text text-muted">Format recommandé : Module.Entity.Action (ex: BanqueProjet.Projet.Create)</small>
    </div>

    <button type="submit" class="btn btn-primary">Renommer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

