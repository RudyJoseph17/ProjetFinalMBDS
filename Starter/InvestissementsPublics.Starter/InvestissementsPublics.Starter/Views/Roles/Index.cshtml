@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Gestion des rôles";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Créer un rôle</a>

<table class="table">
    <thead>
        <tr><th>Nom</th><th>Action</th></tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@role.Id" onsubmit="return confirm('Supprimer ce rôle ?');">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
