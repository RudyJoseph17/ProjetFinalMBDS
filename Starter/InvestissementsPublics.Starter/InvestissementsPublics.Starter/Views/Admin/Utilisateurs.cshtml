@using InvestissementsPublics.Starter.Models.Account
@model IEnumerable<UtilisateurListeViewModel>

@{
    ViewData["Title"] = "Liste des utilisateurs";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="CreerUtilisateur" class="btn btn-primary">Créer un utilisateur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Rôles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Roles.Any())
                    {
                        @string.Join(", ", user.Roles)
                    }
                    else
                    {
                        <em>— Aucun rôle —</em>
                    }
                </td>
                <td>
                    <a asp-action="ModifierUtilisateur" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Modifier</a>
                    <form asp-action="SupprimerUtilisateur"
                          asp-route-id="@user.Id"
                          method="post"
                          style="display:inline"
                          onsubmit="return confirm('Confirmer la suppression ?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
