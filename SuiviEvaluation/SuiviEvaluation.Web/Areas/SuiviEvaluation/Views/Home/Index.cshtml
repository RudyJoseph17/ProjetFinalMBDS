@model IEnumerable<SuiviEvaluation.Web.Models.ProjetListItemViewModel>
@{
    ViewData["Title"] = "Accueil";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Bienvenue sur le module de Suivi Evaluation</h1>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Projets enregistrés</h6>
                <div>
                    <a asp-area="SuiviEvaluation" asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary">Rafraîchir</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-info">Aucun projet trouvé dans le système.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Nom</th>
                                    <th class="text-right">Coût total</th>
                                    <th style="width:280px">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NomProjet</td>
                                        <td class="text-right">@string.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:N2}", item.CoutTotal)</td>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Actions pour @item.NomProjet">
                                                <a class="btn btn-sm btn-primary"
                                                   href="@Url.Action("Create", "AutorisationSurProjet", new { area = "SuiviEvaluation", nomProjet = item.NomProjet })"
                                                   title="Entrer une autorisation">Entrer une autorisation</a>

                                                <a class="btn btn-sm btn-success"
                                                   href="@Url.Action("Create", "DecaissementSurProjet", new { area = "SuiviEvaluation", nomProjet = item.NomProjet })"
                                                   title="Entrer un décaissement">Entrer un décaissement</a>

                                                <a class="btn btn-sm btn-warning text-white"
                                                   href="@Url.Action("Create", "DepenseReelleSurProjet", new { area = "SuiviEvaluation", nomProjet = item.NomProjet })"
                                                   title="Entrer une dépense">Entrer une dépense</a>

                                                <a class="btn btn-sm btn-secondary" href="@Url.Action("Details", "Projets", new { area = "BanqueProjet", id = item.Id })" title="Voir détails">Détails</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Si besoin : fonction d'aide pour ouvrir la page Create et préremplir côté client
        // Note : les contrôleurs ciblés doivent accepter le paramètre querystring `nomProjet` et préremplir le champ.
        function openCreate(controller, nomProjet) {
            var url = '/' + 'SuiviEvaluation' + '/' + controller + '/Create?nomProjet=' + encodeURIComponent(nomProjet);
            window.location.href = url;
        }
    </script>
}