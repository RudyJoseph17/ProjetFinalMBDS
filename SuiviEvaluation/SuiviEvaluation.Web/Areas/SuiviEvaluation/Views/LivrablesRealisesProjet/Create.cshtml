@model SuiviEvaluation.Application.Dtos.LivrablesRealisesProjetDto

@{
    ViewData["Title"] = "Créer Livrables réalisés";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdIdentificationProjet"></label>
        <input asp-for="IdIdentificationProjet" class="form-control" />
        <span asp-validation-for="IdIdentificationProjet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Quantités par exercice (JSON)</label>
        <textarea name="quantiteParAnneeJson"
                  class="form-control"
                  rows="4">@Newtonsoft.Json.JsonConvert.SerializeObject(Model.QuantiteLivreeParAnnee)</textarea>
        <small class="form-text text-muted">
            Ex. {"2022":5,"2023":8}
        </small>
    </div>

    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
