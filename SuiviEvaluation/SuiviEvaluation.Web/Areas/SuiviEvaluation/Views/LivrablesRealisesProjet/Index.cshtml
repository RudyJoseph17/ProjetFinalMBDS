@model IEnumerable<SuiviEvaluation.Application.Dtos.LivrablesRealisesProjetDto>

@{
    ViewData["Title"] = "Livrables réalisés";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nouveau</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Projet</th>
            <th>Total livré</th>
            <th>Valeur cible</th>
            <th>Différence</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdIdentificationProjet</td>
                <td>@item.QuantiteLivree</td>
                <td>@item.ValeurLivree</td>
                <td>@item.Difference</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdIdentificationProjet">Détails</a> |
                    <a asp-action="Edit" asp-route-id="@item.IdIdentificationProjet">Éditer</a> |
                    <form asp-action="Delete"
                          asp-route-id="@item.IdIdentificationProjet"
                          method="post"
                          class="d-inline">
                        <button type="submit" class="btn btn-link text-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
